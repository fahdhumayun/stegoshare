<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.fahd.stegoshare.SeedListActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/app_bg_new"
    >

    <com.example.fahd.stegoshare.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/listView_description"
        android:textColor="@color/colorWhite"
        android:background="@color/colorAppRed"
        android:gravity="center"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:id="@+id/id_wordsListView"
        android:layout_weight="10"
        />

    <ImageButton
        android:id="@+id/id_nextButtonList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@drawable/next_button"
        />

    <com.example.fahd.stegoshare.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/colorBlack"
        android:text="Tap on the NEXT button to continue."
        android:textSize="12sp"
        android:id="@+id/nextButtonTvId"
        android:layout_marginBottom="10dp"
        />


</LinearLayout>
